<?xml version="1.0" encoding="utf-8"?>
<cn.hand.tech.weiget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sc_1"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/color1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:background="@color/hand_blue"
                android:layout_height="@dimen/head_w">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/title_back"
                        />
                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_para_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="维修记录"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:text="车牌号码"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_car_number"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:layout_centerInParent="true"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:hint="输入车牌号"
                    android:inputType="text"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/bt_search"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_bg_blue"
                    android:text="搜索"
                    android:textSize="13sp"
                    android:textColor="@color/bg_white"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:background="@color/lightGray1"
                android:visibility="gone"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_fa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现象描述:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/list_viction"
                            android:layout_width="match_parent"
                            android:divider="#00000000"
                            android:layout_marginRight="20dp"
                            android:dividerHeight="3dp"
                            android:scrollbars="none"
                            android:minHeight="66dp"
                            android:layout_height="66dp">
                        </ListView>
                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/CustomCheckBoxTheme"
                            android:drawablePadding="8dp"
                            android:padding="4dp"
                            android:visibility="gone"
                            android:layout_alignParentTop="true"
                            android:text="传感器1失真"/>
                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            style="@style/CustomCheckBoxTheme"
                            android:drawablePadding="8dp"
                            android:padding="4dp"
                            android:visibility="gone"
                            android:text="GPS丢失"/>
                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            style="@style/CustomCheckBoxTheme"
                            android:drawablePadding="8dp"
                            android:padding="4dp"
                            android:visibility="gone"
                            android:text="手刹无变化"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修指导:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/list_guide"
                            android:layout_width="match_parent"
                            android:divider="#00000000"
                            android:layout_marginRight="20dp"
                            android:dividerHeight="3dp"
                            android:scrollbars="none"
                            android:minHeight="66dp"
                            android:layout_height="66dp"/>
                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:visibility="gone"
                            android:text="传感器1失真"/>
                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:visibility="gone"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/black"
                            android:text="GPS丢失"/>
                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textSize="15sp"
                            android:visibility="gone"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/black"
                            android:text="手刹无变化"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/ll_repair_info"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:visibility="gone"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:text="更换记录:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="145dp">

                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_1"
                            android:layout_width="70dp"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">
                        </cn.hand.tech.weiget.MyListView>
                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_2"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">

                        </cn.hand.tech.weiget.MyListView>
                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_3"
                            android:layout_width="90dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="invisible"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">

                        </cn.hand.tech.weiget.MyListView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_change"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:text="已选择:"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/gg_6c"/>
                        <TextView
                            android:id="@+id/tv_choosed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更换主机终端,更换传感器-应变计-1，更换传感器-应变计-2.更换传感器-应变计-3"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/ll_repair_more"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gg_6c"
                            android:layout_marginLeft="12dp"
                            android:textSize="14sp"
                            android:text="维修人员:"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/shape_fang_white_1"
                            android:layout_height="36dp">
                            <Spinner
                                android:id="@+id/repair_person"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/stucktype"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注:"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/gg_6c"/>
                        <EditText
                            android:id="@+id/et_remark"
                            android:background="@drawable/shape_bg_hui_kong"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:hint="备注信息"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_height="36dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修总结"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gg_6c"/>
                        <EditText
                            android:id="@+id/et_zong"
                            android:background="@drawable/shape_bg_hui_kong"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:hint="维修总结"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_height="36dp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/bt_save_re"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/shape_bg_blue"
                        android:text="上传维修记录"
                        android:textColor="@color/bg_white"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dialog_truckN_input"
            layout="@layout/dialog_weight_input"
            android:visibility="gone"
            ></include>
    </LinearLayout>
</cn.hand.tech.weiget.MyScrollView>
