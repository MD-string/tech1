<?xml version="1.0" encoding="utf-8"?>
<cn.hand.tech.weiget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sc_1"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/color1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:background="@color/hand_blue"
                android:layout_height="@dimen/head_w">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/title_back"
                        />
                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_para_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="维修记录"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号码:"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/gg_6c"/>

                <TextView
                    android:id="@+id/tv_car_number"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_no"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:text="粤D14618"
                    android:inputType="text"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:background="@color/lightGray1"
                android:visibility="visible"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_fa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障现象:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_xian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.GPS:GPS坐标-漂移"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修指导:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_gudier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.GPS:GPS坐标-漂移"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/ll_repair_info"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:text="维修方式:"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gg_6c"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="175dp">

                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_1"
                            android:layout_width="70dp"
                            android:divider="#00000000"
                            android:scrollbars="none"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">
                        </cn.hand.tech.weiget.MyListView>
                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_2"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:scrollbarFadeDuration="0"
                            android:fadeScrollbars="false"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">

                        </cn.hand.tech.weiget.MyListView>
                        <cn.hand.tech.weiget.MyListView
                            android:id="@+id/list_3"
                            android:layout_width="90dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="invisible"
                            android:scrollbarFadeDuration="0"
                            android:fadeScrollbars="false"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_height="match_parent">

                        </cn.hand.tech.weiget.MyListView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_change"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:text="已选择:"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/gg_6c"/>
                        <TextView
                            android:id="@+id/tv_choosed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更换主机终端,更换传感器-应变计-1，更换传感器-应变计-2.更换传感器-应变计-3"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/lightGray1"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/ll_repair_more"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="6dp"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gg_6c"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="GPS天线:"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-4dp"
                            android:background="@drawable/shape_fang_white_1"
                            android:layout_height="34dp">
                            <Spinner
                                android:id="@+id/addRepair_gps_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/gps_spinner"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="6dp"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingBottom="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gg_6c"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="GSM天线:"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-4dp"
                            android:background="@drawable/shape_fang_white_1"
                            android:layout_height="34dp">
                            <Spinner
                                android:id="@+id/addRepair_gsm_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/gsm_spinner"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingBottom="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gg_6c"
                            android:layout_marginLeft="12dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="维修人员:"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/shape_fang_white_1"
                            android:layout_height="36dp">
                            <Spinner
                                android:id="@+id/repair_person"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:entries="@array/stucktype"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="司机姓名:"
                            android:layout_marginLeft="12dp"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/gg_6c"/>
                        <EditText
                            android:id="@+id/et_dirver_name"
                            android:background="@drawable/shape_bg_hui_kong"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:hint="请输入司机姓名"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_height="36dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="司机电话:"
                            android:layout_marginLeft="12dp"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/gg_6c"/>
                        <EditText
                            android:id="@+id/et_dirver_phone"
                            android:background="@drawable/shape_bg_hui_kong"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:hint="请输入司机电话"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:inputType="number"
                            android:layout_height="36dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备         注:"
                            android:layout_marginLeft="12dp"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/gg_6c"/>
                        <EditText
                            android:id="@+id/et_remark"
                            android:background="@drawable/shape_bg_hui_kong"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:hint="备注信息"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_height="36dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingBottom="6dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修总结"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gg_6c"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="12dp"
                            android:layout_height="wrap_content">
                          <TextView
                              android:layout_width="wrap_content"
                              android:text="常        见:"
                              android:layout_gravity="center_vertical"
                              android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/ll_choose_normal"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="12dp"
                                android:text="请选择"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:minHeight="36dp"
                                android:background="@drawable/shape_bg_hui_kong"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_change_1"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="62dp"
                                android:layout_height="wrap_content"
                                android:text="已选择:"
                                android:layout_marginLeft="12dp"
                                android:textColor="@color/gg_6c"/>
                            <TextView
                                android:id="@+id/tv_choosed_nomarl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更换主机终端,更换传感器-应变计-1，更换传感器-应变计-2.更换传感器-应变计-3"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_height="36dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="其        他:"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/et_zong"
                                android:background="@drawable/shape_bg_hui_kong"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:hint="请输入其他总结"
                                android:textSize="14sp"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_1"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:text="添加照片:"
                                android:layout_width="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"/>

                            <cn.hand.tech.ui.setting.MyGridView
                                android:id="@+id/pic_gridview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="12dp"
                                android:columnWidth="80dp"
                                android:gravity="center"
                                android:horizontalSpacing="4dp"
                                android:listSelector="@color/transparent"
                                android:numColumns="3"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:scrollbars="none"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/bt_save_re"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/shape_bg_blue"
                        android:text="上传维修记录"
                        android:textColor="@color/bg_white"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dialog_truckN_input"
            layout="@layout/dialog_weight_input"
            android:visibility="gone"
            ></include>
    </LinearLayout>
</cn.hand.tech.weiget.MyScrollView>
