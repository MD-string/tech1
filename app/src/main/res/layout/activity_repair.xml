<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:background="@color/hand_blue"
                android:layout_height="@dimen/head_w">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/title_back"
                        />
                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_para_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="维修记录"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/title_near"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="20dp"
                    android:visibility="gone"
                    android:paddingBottom="3dp"
                    android:text="离我最近"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_repair_add"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="20dp"
                    android:text="新增"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_0"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:text="公司名称"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_company_name"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:layout_centerInParent="true"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:inputType="text"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/gray_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:text="车牌号码"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_car_number"
                    android:background="@drawable/shape_bg_hui_kong"
                    android:layout_centerInParent="true"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:hint="输入车牌号"
                    android:inputType="text"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/bt_search"
                    android:layout_width="90dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_bg_blue"
                    android:text="搜索"
                    android:textSize="13sp"
                    android:textColor="@color/bg_white"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_line0"
                android:layout_width="match_parent"
                android:background="@color/lightGray1"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:id="@+id/ll_tel"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_search"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_fa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现象描述:"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gg_6c"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content">

                            <ListView
                                android:id="@+id/list_viction"
                                android:layout_width="match_parent"
                                android:divider="#00000000"
                                android:layout_marginRight="20dp"
                                android:dividerHeight="3dp"
                                android:scrollbars="none"
                                android:minHeight="66dp"
                                android:layout_height="wrap_content">
                            </ListView>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修指导:"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/gg_6c"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content">
                            <ListView
                                android:id="@+id/list_guide"
                                android:layout_width="match_parent"
                                android:divider="#00000000"
                                android:dividerHeight="3dp"
                                android:scrollbars="none"
                                android:minHeight="66dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/lightGray1"
                        android:layout_height="0.5dp"/>

                    <LinearLayout
                        android:id="@+id/ll_near"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_horizontal"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:src="@mipmap/icon_arrow_left"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="附近的车"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/gg_6c"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近的车:"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/gg_6c"/>
                <cn.hand.tech.weiget.listview.XListView
                    android:id="@+id/list_nearto_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:fadingEdge="none"
                    android:dividerHeight="0.5dp"
                    android:divider="@color/bg_light_gray"
                    android:fastScrollEnabled="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="vertical"
                    android:scrollingCache="false"
                    android:transcriptMode="disabled"
                    android:visibility="visible">

                </cn.hand.tech.weiget.listview.XListView>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/dialog_truckN_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/dialog_weight_input"
        ></include>
</RelativeLayout>