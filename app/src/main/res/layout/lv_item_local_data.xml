<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/sel_bg_white_gray"
        >

        <CheckBox
            android:id="@+id/cb_local_item"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/sel_check"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="110dp"
            android:paddingLeft="12dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_saveLocal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-04-02 16:58:36"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_dev_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备ID:1255444444"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_car_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="粤B11111"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingBottom="15dp"
            android:gravity="right|center_vertical"
            android:paddingTop="15dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/gray_right_arrow"
            android:layout_marginRight="12dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        >

    </View>

</LinearLayout>