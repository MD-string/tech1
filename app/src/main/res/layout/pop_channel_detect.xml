<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_white"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <GridView
            android:id="@+id/gv_chanel_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="10dp"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"

            ></GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
          android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/hand_blue_dark"
                android:textSize="24dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="检测通道阈值"/>

            <ImageView
                android:id="@+id/iv_decrease_value"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:src="@drawable/sel_del_car"/>

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hand_blue_dark"
                android:textSize="24dp"
                android:text="3"/>

            <ImageView
                android:id="@+id/iv_add_value"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sel_add_car"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"


            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            >
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="20sp"
                android:background="@drawable/sel_bg_white_gray"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"
                ></View>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textColor="@color/hd_blue"
                android:gravity="center"
                android:text="录车"
                android:textSize="20sp"
                android:background="@drawable/sel_bg_white_gray"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>